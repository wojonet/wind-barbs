{
  "compilerOptions": {
    "target": "ES6", // Specify ECMAScript target version
    "module": "es6", // Specify module code generation
    "jsx": "react", // Support JSX in React
    "outDir": "./dist", // Redirect output structure to the dist/react directory
    "rootDir": "./src", // Specify the root directory of input files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enable compatibility with CommonJS modules
    "moduleResolution": "node", // Use Node.js module resolution
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
    "declaration": true
  },
  "include": ["src/react/**/*.tsx"], // Include all files in the src directory
  "exclude": ["node_modules", "dist"] // Exclude node_modules and dist directories
}
