{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "rootDir": "./src",
    "jsx": "react" // Add JSX support for React
  },
  "include": [
    "src/index.ts",
    "src/react/**/*.tsx" // Include React files
  ],
  "exclude": ["node_modules", "dist"]
}
